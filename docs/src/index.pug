extends _layout/_layout.pug

block variables
  - var slug = 'index'
  - var parent = 'index'
  - var title = 'ridestyler.ui CSS Framework'
  - var description = 'ridestyler.ui CSS Framework is a lightweight, responsive and modern CSS framework for faster and extensible development. ridestyler.ui provides basic styles for typography and elements, flexbox based responsive layout system, pure CSS components and utilities with best practice coding and consistent design language.'

block content
  .section.section-hero
    #overview.grid-hero.container.grid-lg.text-center
      .docs-brand
        a.docs-logo(href='https://www.ridestyler.com')
          .ridestyler-logo-full
      h1 ridestyler.ui
      h2
        | RideStyler&apos;s CSS Framework for branded tools and applications
      p
        a.btn.btn-lg.mr-2(href='getting-started.html') Docs
        a.btn.btn-lg(href='https://github.com/Burkson/ridestyler.ui' target='_blank') GitHub
      p
        | Latest version: 
        span.version
        
  .section.section-features.bg-ridestyler-orange.text-light.text-center
    .container.grid-lg
      h2 Introduction
      .columns
        .column.col-10.col-sm-12.col-mx-auto.text-left
          p
            strong ridestyler.ui 
            | is a lightweight, responsive and CSS framework built for RideStyler's branded tools and web applications.
          p
            | ridestyler.ui provides basic styles for typography and elements, flexbox based responsive layout system, pure CSS components and utilities with best practice coding and consistent design language.
  
        .column.col-10.col-sm-12.col-mx-auto
          a.btn.btn-primary.btn-lg(href='getting-started/installation.html') Get Started

  footer.section.section-footer
    include _layout/_footer.pug