extends ../_layout/_docs-layout.pug

block variables
  - var slug = 'breadcrumbs'
  - var parent = 'components'
  - var title = 'Breadcrumbs - Components - ridestyler.ui CSS Framework'
  - var description = 'Breadcrumbs are used as navigational hierarchies to indicate current location. ridestyler.ui CSS Framework is a lightweight, responsive and modern CSS framework for faster and extensible development.'

block docs-content
  +docs-heading('breadcrumbs', 'Breadcrumbs')

    p Breadcrumbs are used as navigational hierarchies to indicate current location.

    .docs-demo.columns
      .column
        .navbar.navbar-branded
          .navbar-brand
            .navbar-brand-logo
            i.icon.icon-car
          section.navbar-section
            h1 Augmented Reality
          section.navbar-section
            button.btn.btn-link
              | Wheel Co. 
              i.icon.icon-caret-down
        header
          ul.breadcrumb
            li.breadcrumb-item
              a.tooltip(href="#breadcrumbs" data-tooltip="Home") Home
            li.breadcrumb-item
              a.tooltip(href="#breadcrumbs" data-tooltip="Settings") Settings
        header.mt-1
          ul.breadcrumb
            li.breadcrumb-item
              a.tooltip(href="#breadcrumbs" data-tooltip="Home") Home
            li.breadcrumb-item
              a.tooltip(href="#breadcrumbs" data-tooltip="Settings") Settings
            li.breadcrumb-item.disabled
              a.tooltip(href="#breadcrumbs" data-tooltip="Change avatar") Change avatar

    p
      | Add a container element with the #[code breadcrumb] class.
      | And add child elements with the #[code breadcrumb-item] class.
      | Breadcrumb items can have a #[code disabled] class to make the breadcrumb appear inactive.

    pre.code(data-lang='HTML')
      code
        :highlight(lang="html")
          <ul class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="#">Home</a>
            </li>
            <li class="breadcrumb-item">
              <a href="#">Settings</a>
            </li>
            <li class="breadcrumb-item disabled">
              <a href="#">Change avatar</a>
            </li>
          </ul>

  include ../_layout/_footer.pug