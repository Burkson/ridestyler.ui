extends ../_layout/_docs-layout.pug

block variables
  - var slug = 'cards'
  - var parent = 'components'
  - var title = 'Cards - Components - ridestyler.ui CSS Framework'
  - var description = 'Cards are flexible content containers. ridestyler.ui CSS Framework is a lightweight, responsive and modern CSS framework for faster and extensible development.'

block docs-content
