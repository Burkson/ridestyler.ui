extends ../_layout/_docs-layout.pug

block variables
  - var slug = 'navbar'
  - var parent = 'layout'
  - var title = 'Navbar - Layout - ridestyler.ui CSS Framework'
  - var description = 'Navbar is a layout container that appears in the header of apps and websites. ridestyler.ui CSS Framework is a lightweight, responsive and modern CSS framework for faster and extensible development.'

block docs-content
  +docs-heading('navbar', 'Navbar')

    p Navbar is a layout container that appears in the header of apps and websites.
   
    .docs-demo.columns
      .column
        .navbar
          .navbar-brand RideStyler
          section.navbar-section
            button.btn.btn-link
              | Wheel Co. 
              i.icon.icon-caret-down

    p
      | The navbar component can include logo brand, nav links and buttons, search box or any combination of those elements.
      | Each section with the #[code navbar-section] class will be evenly distributed in the container.

    pre.code(data-lang='HTML')
      code
        :highlight(lang="html")
          <header class="navbar">
            <section class="navbar-section">
              <a href="..." class="navbar-brand">RideStyler</a>
            </section>
            <section class="navbar-section">
              <div class="input-group input-inline">
                <input class="form-input" type="text" placeholder="search">
                <button class="btn btn-primary input-group-btn">Search</button>
              </div>
            </section>
          </header>
    
    +docs-subheading('navbar-branded', 'Branded')

    p
      | You can use #[code navbar-branded] class to use the branded navbar styling. Add a 
      | #[code .navbar-brand] with a #[code .navbar-brand-logo] element inside of it to get 
      | the branded logo. Add an #[code .icon] element and put your logo inside of it to 
      | get your app's logo overlaid ontop.

    .docs-demo.columns
      .column
        .navbar.navbar-branded
          .navbar-brand
            .navbar-brand-logo
            i.icon.icon-car
          section.navbar-section
            h1 Calculators
          section.navbar-section
            button.btn.btn-link
              | Wheel Co. 
              i.icon.icon-caret-down
    
    pre.code(data-lang="HTML")
      code
        :highlight(lang="html")
          <div class="navbar navbar-branded">
            <div class="navbar-brand">
              <div class="navbar-brand-logo"></div>
              <i class="icon icon-car"></i>
            </div>
            <section class="navbar-section">
              <h1>Calculators</h1>
            </section>
            <section class="navbar-section">
              <button class="btn btn-link">Wheel Co. <i class="icon icon-caret-down"></i></button>
            </section>
          </div>
    
    +docs-subheading('navbar-centered', 'Centered')

    p
      | You can use #[code navbar-center] class to have a centered section.

    .docs-demo.columns
      .column.col-12
        .navbar
          .navbar-section
            a.btn.btn-link(href="#navbar") Docs
            a.btn.btn-link(href="#navbar") Examples
          .navbar-center
            img(src="../img/ridestyler.ui-logo.svg" alt="ridestyler.ui")
          .navbar-section
            a.btn.btn-link(href="https://twitter.com/ridestyler.uicss") Twitter
            a.btn.btn-link(href="https://github.com/picturepan2/ridestyler.ui") GitHub

    pre.code(data-lang='HTML')
      code
        :highlight(lang="html")
          <header class="navbar">
            <section class="navbar-section">
              <a href="#" class="btn btn-link">Docs</a>
              <a href="#" class="btn btn-link">Examples</a>
            </section>
            <section class="navbar-center">
              <!-- centered logo or brand -->
            </section>
            <section class="navbar-section">
              <a href="#" class="btn btn-link">Twitter</a>
              <a href="#" class="btn btn-link">GitHub</a>
            </section>
          </header>

  include ../_layout/_footer.pug